<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/app_background"
    tools:context=".registration">

    <TextView
        android:id="@+id/tv_title_registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTRATION"
        android:textColor="@color/purple_500"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="48sp" />

    <EditText
        android:id="@+id/et_register_fullname"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/tv_title_registration"
        android:layout_marginTop="28dp"
        android:background="@drawable/rounded_edt"
        android:ems="10"
        android:gravity="center"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:textColor="@color/purple_500" />

    <EditText
        android:id="@+id/et_register_email"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/rounded_edt"
        android:textColor="@color/purple_500"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:gravity="center"
        android:layout_below="@+id/et_register_fullname" />

    <EditText
        android:id="@+id/et_register_password"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/et_register_email"
        android:layout_marginTop="15dp"
        android:background="@drawable/rounded_edt"
        android:ems="10"
        android:gravity="center"
        android:hint="Password"
        android:inputType="textPersonName"
        android:textColor="@color/purple_500" />

    <TextView
        android:id="@+id/tv_occupation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_register_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Occupation"
        android:textAllCaps="false"
        android:textColor="@color/purple_500"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner_occupation"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/tv_occupation"
        android:layout_marginTop="16dp"
        android:spinnerMode="dropdown" />

    <Button
        android:id="@+id/btn_registration_register"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/spinner_occupation"
        android:layout_marginTop="60dp"
        android:background="@drawable/roundedbutton"
        android:gravity="center"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tv_registration_registercourt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register Court"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/btn_registration_register"
        android:textColor="@color/purple_200"
        android:textSize="16sp"
         />



</RelativeLayout>